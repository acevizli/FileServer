<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark theme with custom colors -->
    <style name="Theme.FileServer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color - use our accent -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorPrimaryVariant">@color/accent_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color - dark background -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
        <!-- Text input styling -->
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <!-- CardView styling -->
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>
</resources>